{
  "compilerOptions": {
	"allowJs": true,
    "strict": true,
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["./node_modules/**/*"]
}
